{
  "extends": "@fuku/config-typescript/nextjs.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@fuku/auth": ["../../packages/auth/src/*"],
      "@fuku/api": ["../../packages/api/src/*"],
      "@fuku/ui": ["../../packages/ui/src/*"],
      "@fuku/db": ["../../packages/db/src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
