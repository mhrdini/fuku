enum UserRole {
  ADMIN
  STAFF
}

model User {
  id              String  @id @default(uuid())
  name            String
  email           String  @unique
  emailVerified   Boolean @default(false) @map("email_verified")
  image           String?
  username        String  @unique
  displayUsername String  @unique @map("display_username")

  userRole     UserRole    @default(STAFF) @map("user_role")
  teamMemberId String?     @unique @map("team_member_id")
  teamMember   TeamMember? @relation("TeamMemberToUser", fields: [teamMemberId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("user")
}

model Session {
  id     String @id @default(uuid())
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  token     String   @unique
  expiresAt DateTime @map("expires_at")

  ipAddress String? @map("ip_address")
  userAgent String? @map("user_agent")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("session")
}

model Account {
  id     String @id @default(uuid())
  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  accountId  String @map("account_id")
  providerId String @map("provider_id")

  accessToken           String?   @map("access_token")
  refreshToken          String?   @map("refresh_token")
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  scope                 String?
  idToken               String?   @map("id_token")

  password String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime @map("expires_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("verification")
}
