model TeamRole {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  defaultRate Float   @map("default_rate")

  teamMembers TeamMember[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("team_role")
}

model TeamMember {
  id               String           @id @default(uuid())
  familyName       String           @map("family_name")
  givenNames       String           @map("given_names")
  teamRoleId       String           @map("team_role_id")
  teamRole         TeamRole         @relation(fields: [teamRoleId], references: [id])
  rateMultiplier   Float            @default(1.0) @map("rate_multiplier")
  dayAssignments   DayAssignment[]
  unavailabilities Unavailability[]
  color            String?
  user             User?            @relation("TeamMemberToUser")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([teamRoleId])
  @@map("team_member")
}
