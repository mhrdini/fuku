// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
}

enum LeaveType {
  PAID
  UNPAID
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
}

model TeamMember {
  id            String          @id @default(uuid())
  color         String?
  familyName    String
  givenNames    String
  type          EmploymentType
  dayAssignment DayAssignment[]
}

model Location {
  id      String            @id @default(uuid())
  color   String?
  name    String
  address String?
  shift   ShiftAssignment[]
}

model ShiftType {
  id          String            @id @default(uuid())
  color       String?
  name        String
  description String?
  startTime   DateTime
  endTime     DateTime
  shift       ShiftAssignment[]
}

model DayAssignment {
  id   String   @id @default(uuid())
  date DateTime

  teamMemberId String
  teamMember   TeamMember @relation(fields: [teamMemberId], references: [id])

  shift ShiftAssignment? @relation("DayAssignmentToShift")
  leave LeaveAssignment? @relation("DayAssignmentToLeave")

  @@unique([teamMemberId, date])
}

model ShiftAssignment {
  id              String        @id @default(uuid())
  startTime       DateTime
  endTime         DateTime
  locationId      String
  shiftTypeId     String
  location        Location?     @relation(fields: [locationId], references: [id])
  shiftType       ShiftType?    @relation(fields: [shiftTypeId], references: [id])
  dayAssignmentId String        @unique
  dayAssignment   DayAssignment @relation(name: "DayAssignmentToShift", fields: [dayAssignmentId], references: [id])
}

model LeaveAssignment {
  id              String        @id @default(uuid())
  leaveType       LeaveType
  dayAssignmentId String        @unique
  dayAssignment   DayAssignment @relation(name: "DayAssignmentToLeave", fields: [dayAssignmentId], references: [id])
}
