{
  "name": "fuku",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.12.4",
  "private": true,
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "scripts": {
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:migrate:dev:auto": "turbo run db:migrate:dev:auto",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "db:seed:dev": "turbo run db:seed:dev",
    "up:dev": "docker compose -f docker-compose.development.yml --env-file .env.development up -d",
    "down:dev": "docker compose -f docker-compose.development.yml --env-file .env.development down",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "clean:install": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + && pnpm install -r",
    "dev": "turbo run dev",
    "commit": "git-cz",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@fuku/config-eslint": "workspace:*",
    "@fuku/config-typescript": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "commitizen": "^4.3.1",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "latest",
    "tsx": "4.19.1",
    "turbo": "^2.5.8",
    "validate-branch-name": "^1.3.2"
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(feat|fix|hotfix|release|chore)/.+$",
    "errorMsg": "Invalid branch name \n Ex. [master, develop, feature/feature-info, fix/112-fix-info, hotfix/112-hotfix-info, release/1.0.0, chores/chores-info]"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,css,html}": [
      "prettier --single-quote --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
